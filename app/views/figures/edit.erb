<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="figure_name">Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br>

  <label for="figure_titles">Titles:</label>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %>
  <% end %><br>

  <label for="new_title">or create a new title:</label>
  <input type="text" name="title[name]" id="new_title"><br>

  <label for="figure_landmarks">Landmarks:</label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
  <% end %><br>

  <label for="new_landmark">or create a new landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark"><br>

  <input type="submit" name="submit" value="Edit Figure">
</form>
